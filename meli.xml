        <filename plugin="meli">meli.php</filename>
        <folder>helper</folder>
        <folder>meli</folder>
    </files>

    <vmconfig>
        <fields name="params">
            <fieldset name="basic" addfieldpath="/administrator/components/com_virtuemart/elements">
                <field type="text" name="merchant" label="شماره پذیرنده" description=""/>
                <field type="text" name="terminal" label="ترمینال" description=""/>
                <field type="text" name="key" label="کلید ترمینال" description=""/>
                <field name="currency" type="list" default="rial" label="واحد پولی فروشگاه" description="">
