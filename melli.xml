				<field type="text" name="terminal_id" label="شناسه ترمینال" description="شناسه ترمینال"/>
				<field type="text" name="terminal_key" label="کلید تراکنش" description="کلید تراکنش"/>
			</fieldset>
		</fields>
	</vmconfig>
